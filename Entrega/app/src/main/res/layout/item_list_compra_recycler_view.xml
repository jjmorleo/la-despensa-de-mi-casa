<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="false"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/color_secondary"
    app:strokeWidth="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_list_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceBody1" />


            <TextView
                android:id="@+id/item_list_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/comprar_product"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceBody1" />

            <TextView
                android:id="@+id/item_list_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANTIDAD"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceBody2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cart_item_aumentar1"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/color_primary_variant"
                    android:text="+1"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cart_item_disminuir1"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/color_error"
                    android:text="-1"
                    android:textColor="@color/white"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_list"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:src="@raw/bebidas"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>