<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_Vguide10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_Vguide90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_Hguide90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_mbt_olvidar_password"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Olvidó su contraseña?"
        app:layout_constraintBottom_toTopOf="@+id/main_Hguide90"
        app:layout_constraintEnd_toStartOf="@+id/main_Vguide90"
        app:layout_constraintStart_toEndOf="@+id/main_Vguide10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_mbt_registro"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Registrate"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_baseline_person_add_alt_1_24"
        app:iconGravity="textStart"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/main_mbt_olvidar_password"
        app:layout_constraintEnd_toStartOf="@+id/main_Vguide90"
        app:layout_constraintStart_toEndOf="@id/main_Vguide10"
        app:strokeColor="@color/color_secondary"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_mbt_iniciar_seccion"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Iniciar Sección"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_baseline_login_24"
        app:iconGravity="textStart"
        app:iconPadding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/main_mbt_registro"
        app:layout_constraintEnd_toStartOf="@+id/main_Vguide90"
        app:layout_constraintStart_toEndOf="@id/main_Vguide10"
        app:strokeColor="@color/color_secondary"
        app:strokeWidth="2dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/main_til_introducir_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Contraseña"
        app:boxStrokeColor="@color/color_secondary"
        app:boxStrokeWidth="2dp"
        app:cornerRadius="15dp"
        app:endIconMode="password_toggle"
        app:errorEnabled="true"
        app:hintTextColor="@color/color_secondary"
        app:layout_constraintBottom_toTopOf="@+id/main_mbt_iniciar_seccion"
        app:layout_constraintEnd_toStartOf="@id/main_Vguide90"

        app:layout_constraintStart_toEndOf="@id/main_Vguide10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_tie_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/main_til_introducir_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Nombre de usuario"
        app:boxStrokeColor="@color/color_secondary"
        app:boxStrokeWidth="2dp"
        app:cornerRadius="15dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/color_secondary"
        app:layout_constraintBottom_toTopOf="@+id/main_til_introducir_password"
        app:layout_constraintEnd_toStartOf="@id/main_Vguide90"
        app:layout_constraintStart_toEndOf="@id/main_Vguide10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/main_tie_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_profile_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/color_secondary"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@id/main_til_introducir_usuario"
        app:layout_constraintEnd_toStartOf="@id/main_Vguide90"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/main_Vguide10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>